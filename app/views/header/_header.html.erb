<header class="d-flex flex-wrap justify-content-center py-3 mb-4 border-bottom header">
      <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-dark text-decoration-none">
        <svg class="bi me-2" width="40" height="32"><use xlink:href="#bootstrap"/></svg>
        <span class="fs-4"><strong><span class='white'>Cars feeling</span></strong></span>
      <div class='text-right'>
        <ul class="nav col-12 col-lg-auto me-lg-auto mb-3 mb-md-0">
              <button type="button" class="btn btn-outline-light me-2 text-bg-dark"><%= link_to "О компании", home_path, class: 'nav-link px-2 text-white' %></button>
            <button type="button" class="btn btn-outline-light me-2 text-bg-dark"><%= link_to "Услуги", service_path, class: 'nav-link px-2 text-white' %></button>
            <button type="button" class="btn btn-outline-light me-2 text-bg-dark"><%= link_to "Мастеры", masters_path, class: 'nav-link px-2 text-white' %></button>
            <button type="button" class="btn btn-outline-light me-2 text-bg-dark"><%= link_to "Гарантии", garant_path, class: 'nav-link px-2 text-white' %></button>
            <button type="button" class="btn btn-outline-light me-2 text-bg-dark"><%= link_to "Галерея", photo_path, class: 'nav-link px-2 text-white' %></button>
            <button type="button" class="btn btn-outline-light me-2 text-bg-dark"><%=link_to "Работа у нас", work_path, class: 'nav-link px-2 text-white' %>
            <button type="button" class="btn btn-outline-light me-2 text-bg-dark"><%= link_to "Контакты", contacts_path, class: 'nav-link px-2 text-white', data: {turbo: false} %></button>
            <button type="button" class="btn btn-outline-light me-2 text-bg-dark"><%= link_to "Отзывы", comm_path, class: 'nav-link px-2 text-white' %></button>
         <% if user_signed_in? %>
                  <li class="nav-item dropdown mr-auto btn btn-outline-light me-2 text-bg-dark">
                    <a class="nav-link dropdown-toggle nav-link px-2 text-white" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                      Аккаунт
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end text-bg-dark" aria-labelledby="navbarDropdown">
                      <li><%=link_to "Редактировать профиль",  edit_user_path(current_user), class: "nav-link px-2 text-white dropdown-item btn", type: "button"%></li>
                      <li><hr class="dropdown-divider"></li>
                      <li><%=link_to "Мои заказы", records_path(current_user), class: "nav-link px-2 text-white dropdown-item btn", type: "button"%></li>
                      <li><hr class="dropdown-divider"></li>
                      <li><%=link_to "Заказать конусльтацию", consult_path, class: "nav-link px-2 text-white dropdown-item btn", type: "button"%></li>
                      <li><hr class="dropdown-divider"></li>
                      <li><%= button_to "Выйти", session_path, method: :delete, class: "nav-link px-2 text-white dropdown-item btn btn-lg"%></li>
                      </ul>
            <% else %>
            <button type="button" class="btn btn-outline-light me-2 text-bg-dark"><%= link_to "Войти", login_path, class: 'nav-link px-2 text-white' %></button>
            <button type="button" class="btn btn-outline-light me-2 text-bg-dark"><%= link_to "Зарегистрироваться", new_user_path, class: 'nav-link px-2 text-white' %></button>
            <% end %>
        </ul>
         </div>
      </a>
    </header>